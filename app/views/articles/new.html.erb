<% if @article.errors.any? %>
    <% @article.errors.full_messages.each do |msg|%>
        <ul>
            <li><%= msg %></li>    
        </ul>
    <%end%>
<%end%>
    
<%= form_for @article do |f| %>
    <p>
        <%= f.label :title, "Title" %> <br>
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description, "Description" %> <br>
        <%= f.text_area :description %>
    </p>
    <p>
        <%= f.submit %> <!-- automatically POST request -->
    </p>
<% end %>