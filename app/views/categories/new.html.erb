<h1 align="center">New category</h1>
<br>
<div class="row">
    <div class="col-xs-6 col-xs-offset-3">
    
       <%= render "shared/errors", obj: @category%>
    
        <%= form_for @category do |f|%>
            <div class="form-group">
                <label><%= f.label :name, "Category name" %></label>
                <%= f.text_field :name, class:"form-control", placeholder:"Category name" %>
            </div>
            <div class="form-group">
                <%= f.submit  class:"btn btn-success form-control" %> <!-- automatically POST request -->
            </div>
            <div class="form-group">
                <%= link_to "Back", "/articles"%>
            </div>
        <% end %>
    </div>
</div> 